<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTicket.IncidentForm">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Entry Grid.Row="0" x:Name="Description" Placeholder="Please type a brief description..." />
        <Image Grid.Row="1" x:Name="UserPic" Source="icon.png"/>
        <Button Grid.Row="2" x:Name="TakePicBtn" Text="Take Picture" Clicked="TakePhoto"/>
        <Button Grid.Row="3" x:Name="SubmitBtn" Text="Submit" Clicked="ReportIssueForm" />
    </Grid>
</ContentPage>