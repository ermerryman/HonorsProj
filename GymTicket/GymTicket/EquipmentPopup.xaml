<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTicket.EquipmentPopup">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="EquipmentImageURL"/>
        <Label Grid.Row="1" x:Name="EquipmentName" Text="Hello, world!" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label Grid.Row="2" x:Name="PrimaryMuscle" Text="Primary muscle: " HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label Grid.Row="3" x:Name="SecondaryMuscle" Text="Secondary muscle: " HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Grid.Row="4" x:Name="ReportBtn" IsEnabled="False" Text="Report An Issue" Clicked="CreateForm"/>
    </Grid>
</ContentPage>